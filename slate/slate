#This is the default .slate file.
# If no ~/.slate file exists this is the file that will be used.

config defaultToCurrentScreen true

# Switch monitors
bind up:ctrl;alt;cmd throw above
bind down:ctrl;alt;cmd throw below
bind left:ctrl;alt;cmd throw left
bind right:ctrl;alt;cmd throw right

# Full screen window
bind space:ctrl;alt move screenOriginX;screenOriginY screenSizeX;screenSizeY

# Half screen window
bind up:ctrl;alt move screenOriginX;screenOriginY screenSizeX;screenSizeY/2
bind down:ctrl;alt move screenOriginX;screenOriginY+screenSizeY/2 screenSizeX;screenSizeY
bind left:ctrl;alt move screenOriginX;screenOriginY screenSizeX/2;screenSizeY
bind right:ctrl;alt move screenOriginX+screenSizeX/2;screenOriginY screenSizeX/2;screenSizeY

# Quarter screen window
bind left:ctrl;alt;cmd;shift corner top-left resize:screenSizeX/2;screenSizeY/2
bind up:ctrl;alt;cmd;shift corner top-right resize:screenSizeX/2;screenSizeY/2
bind down:ctrl;alt;cmd;shift corner bottom-left resize:screenSizeX/2;screenSizeY/2
bind right:ctrl;alt;cmd;shift corner bottom-right resize:screenSizeX/2;screenSizeY/2

